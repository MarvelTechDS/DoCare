<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    tools:layout_editor_absoluteX="170dp"
    tools:layout_editor_absoluteY="204dp"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/oxygenlistbackground"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="30sp"
    android:layout_marginStart="20sp"
    android:layout_marginTop="20sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/beds_hospitalname"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Hospital Name"
        android:layout_marginTop="12sp"
        android:layout_marginStart="8sp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/beds_location"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="Location"
        android:textSize="20sp"
        android:layout_marginStart="45sp"
        android:layout_marginTop="55sp"/>

    <ImageView
        android:id="@+id/beds_location_img"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="5sp"
        app:srcCompat="@drawable/gps1" />

    <ImageView
        android:id="@+id/beds_bed_img"
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:layout_marginStart="5sp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/hospitalbed" />

    <TextView
        android:id="@+id/beds_available"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="Beds available"
        android:textSize="20sp"
        android:layout_marginTop="100sp"
        android:layout_marginStart="55sp"/>

    <ImageView
        android:id="@+id/bed_phonenumber_img"
        android:layout_width="38dp"
        android:layout_height="30dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="150dp"
        android:background="@color/background_dark"
        android:layout_marginBottom="15sp"
        app:srcCompat="@android:drawable/stat_sys_phone_call" />

    <TextView
        android:id="@+id/bed_hospital_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:layout_marginStart="60sp"
        android:layout_marginBottom="15sp"
        android:text="Phone Number"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/hospital_address"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:text="TextView"
        android:visibility="invisible"/>
</androidx.cardview.widget.CardView>
